{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": ["name", "data", "timestamp"],
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "name": {
            "type": "string",
            "description": "Event type name (e.g., 'user_login', 'order_created')"
        },
        "data": {
            "type": "string",
            "description": "JSON-encoded event payload"
        },
        "source": {
            "type": "string",
            "description": "Source system that generated the event"
        },
        "version": {
            "type": "string",
            "description": "Event schema version"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp when the event occurred"
        },
        "correlationId": {
            "type": "string",
            "description": "Correlation ID for tracing related events"
        }
    }
}

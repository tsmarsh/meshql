FROM maven:3.9-eclipse-temurin-21-alpine AS builder

WORKDIR /build

# Copy the entire project
COPY . .

# Build the example (this will build all dependencies too)
RUN mvn clean package -pl examples/{{model.projectName}} -am -DskipTests

# Runtime stage
FROM eclipse-temurin:21-jre-alpine

# Install curl for healthchecks
RUN apk add --no-cache curl

WORKDIR /app

# Copy the uber JAR from builder stage
COPY --from=builder /build/examples/{{model.projectName}}/target/{{model.projectName}}-0.2.0.jar /app/{{model.projectName}}.jar

# Copy config files
COPY --from=builder /build/examples/{{model.projectName}}/config /app/config

# Expose the application port
EXPOSE {{model.port}}

# Run the uber JAR
CMD ["java", "-jar", "/app/{{model.projectName}}.jar"]

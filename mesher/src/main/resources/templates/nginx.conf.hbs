server {
    listen 80;
    server_name _;
    resolver 127.0.0.11 valid=10s;

    # API proxy â€” strip /api prefix
    location /api/ {
        set $api {{model.projectName}}-app;
        rewrite ^/api/(.*)$ /$1 break;
        proxy_pass http://$api:{{model.port}};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    # Root redirect
    location = / {
        return 302 /api/;
    }
}

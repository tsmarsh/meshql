<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for test output -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Silence noisy libraries -->
    <logger name="org.testcontainers" level="WARN"/>
    <logger name="com.github.dockerjava" level="WARN"/>
    <logger name="org.apache.hc" level="WARN"/>
    <logger name="com.github.jknack.handlebars" level="WARN"/>
    <logger name="tc.postgres" level="WARN"/>

    <!-- Application logging -->
    <logger name="com.meshql" level="INFO"/>
    <logger name="com.meshql.repositories.rdbms" level="DEBUG"/>
    <logger name="com.meshql.repositories.postgres" level="DEBUG"/>

    <!-- Root logger -->
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
